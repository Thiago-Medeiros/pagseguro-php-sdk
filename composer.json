{
  "name": "pagseguro/pagseguro-php-sdk",
  "description": "Biblioteca de integração com o PagSeguro",
  "license": "Apache License 2.0",
  "authors": [
    {
      "name": "PagSeguro"
    }
  ],
  "require": {
    "php": ">=5.4.27",
    "ext-curl": "*",
    "lib-curl": "*",
    "lib-openssl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "behat/behat": "^3.4",
    "symfony/dotenv": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "PagSeguro\\": "source/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "bin-dir": "vendor/bin/"
  }
}
